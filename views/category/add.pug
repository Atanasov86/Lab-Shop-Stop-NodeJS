extends ../layout.pug

block content
  form#add-category-form.center-form(method='post')
    h2.text-center Add Category
    .form-group
      label(for='name') Name
      input#name.input-field(name='name', type='text')
    .form-group
      input#add-category-btn.btn.form-btn.btn-success(type='submit', value='Add')