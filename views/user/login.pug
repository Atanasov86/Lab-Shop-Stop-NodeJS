extends ../layout

block content
  .container
    .row.centered-form
        .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
          .panel.panel-default
            .panel-heading
              h3.text-center.panel-title Please login
            .panel-body
              form(method='post')
                .form-group
                  input#email.form-control.input-sm(type='text', name='username', placeholder='Username')
                .form-group
                  input#email.form-control.input-sm(type='password', name='password', placeholder='Password')
                .form-group
                  input.btn.btn-success.btn-block(type='submit', value='Login')